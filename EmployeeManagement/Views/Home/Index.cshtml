@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee Index";
}
    <div class="col-md-12">
        <div class="card-deck">
            @if (Model != null)
            {
                foreach (var employee in Model)
                {
                     var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
                    <div class="card m-3 col-md-6">
                        <div class="card-header">
                            <h3>@employee.Name</h3>
                        </div>
                        <img class="rounded img-thumbnail"
                             src="@photoPath" asp-append-version="true" />
                        <div class="card-footer text-center">
                            <a asp-controller="Home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary m-1">
                                View
                            </a>

                            <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                               class="btn btn-primary m-1">Edit</a>
                            <a href="#" class="btn btn-danger m-1">Delete</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <h3>Please add employees</h3>
            }
        </div>
    </div>